@model mis4200team2.Models.Kudos

@{
  ViewBag.Title = "Create";
}
<h2 class="display-5">Send Kudos!</h2>
<hr class="my-4" />
@using (Html.BeginForm())
{
  @Html.AntiForgeryToken()

  <div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "invalid-feedback text-danger" })

    <div class="form-group">
      <label for="ReceiverID" class="form-label col-md-2">Receiver Name</label>
      <div class="col-md-10">
        @Html.DropDownList("ReceiverID", null, htmlAttributes: new { @class = "form-select" })
        @Html.ValidationMessageFor(model => model.ReceiverID, "", new { @class = "invalid-feedback text-danger" })
      </div>
    </div>

    <div class="form-group">
      <label for="Type" class="form-label col-md-2">Core Values</label>
      <div class="col-md-10">
        @Html.EnumDropDownListFor(model => model.Type, htmlAttributes: new { @class = "form-select" })
        @Html.ValidationMessageFor(model => model.Type, "", new { @class = "invalid-feedback text-danger" })
      </div>
    </div>
    <hr class="my-4" />
    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Create" class="btn btn-success btn-lg w-100" />
      </div>
    </div>
  </div>
}

<div class="my-4">
  @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
